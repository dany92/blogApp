<h1> List of Articles </h1>
<%= link_to "Create Article", new_article_path %><br /><br />
<table>
<thead>
<th>Title</th>
<th>Description</th>
</thead>
<tbody>
<% @articles.each do |a| %>
	<tr>
	<td><%=a.title%></td>
	<td><%=a.description%></td>
	<td><%= link_to "Edit", edit_article_path(a.id) %></td>
	<td><%= link_to "Show", article_path(a.id) %></td>
	<td><%= link_to "Delete", article_path(a.id), :method => :delete %></td>
	</tr>
<%end%>
</tbody>

</table>
